<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_wish_list_product"
    android:padding="10dp">

    <ImageView
        android:id="@+id/wish_list_product_image"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_logo_jpg_405x540" />

    <TextView
        android:id="@+id/wish_list_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="TextView"
        android:textColor="@color/text_323232"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/wish_list_select"
        app:layout_constraintStart_toEndOf="@+id/wish_list_product_image"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/wish_list_select"
        style="@null"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/custom_checkbox_selector"
        android:button="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wish_list_product_sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="TextView"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/wish_list_product_image"
        app:layout_constraintTop_toBottomOf="@+id/wish_list_product_title" />

    <TextView
        android:id="@+id/wish_list_product_market_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/wish_list_product_sale_price"
        app:layout_constraintTop_toBottomOf="@+id/wish_list_product_title" />

    <ImageView
        android:id="@+id/wish_list_product_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_more_horiz_24" />

    <ImageView
        android:id="@+id/wish_list_product_add_cart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wish_list_product_more"
        app:srcCompat="@drawable/ic_outline_shopping_cart_24" />
</androidx.constraintlayout.widget.ConstraintLayout>